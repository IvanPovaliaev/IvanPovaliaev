Sub ReplaceTextBetweenTags()
    Dim doc As Document
    Dim rng As Range
    Dim searchText As String
    Dim startPos As Long
    Dim endPos As Long
    
    Set doc = ActiveDocument
    Set rng = doc.Content
    
    searchText = "<*>"
    
    With rng.Find
        .ClearFormatting
        .Text = searchText
        .Forward = True
        .Wrap = wdFindStop
        .Format = False
        .MatchWildcards = True
        
        Do While .Execute
            startPos = InStr(rng.Text, "<")
            endPos = InStr(rng.Text, ">")
            If startPos > 0 And endPos > startPos Then
                rng.MoveStart wdCharacter, startPos
                rng.MoveEnd wdCharacter, endPos - startPos - 1
                rng.Text = "Mommy"
            End If
        Loop
    End With
End Sub
